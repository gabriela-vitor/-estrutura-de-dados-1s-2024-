#include <stdio.h>


int main(){

    int quant = 0, soma = 0;
    int num, menor, maior;
    float media;
   
    printf("Digite os numeros (digite -1 para parar):");
    
    while(-1){
        scanf("%d", &num);
        
    if(num == -1)
    break;
    quant++;
        
    if(quant == 1){
        maior = num;
        menor = num;
    }else{
    if (num < menor)
        menor = num;
    
    if (num > maior)
        maior = num;
        
    }

    soma+=num;
    
    }

    media = soma / quant;

    

    printf("Quantidade de  numeros: %d\n", quant);
    printf("A media dos numeros e: %.2f\n", media);
    printf("Menor numero: %d\n", menor);
    printf("Maior numero: %d\n", maior);

    printf("Numeros em ordem crescente:" );
    for(int i = menor; i <= maior; i++){

        printf("%d ", i);
        
            
        }
       
    
    
    printf("\n");
    
    
    return 0;
}
